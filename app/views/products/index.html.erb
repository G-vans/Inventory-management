<p style="color: green"><%= notice %></p>

<%# display products as table %>
<h1>Products</h1>
  <table class="table col-mb-2">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= link_to "More", product %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="col-mb-2">
<%= link_to "New product", new_product_path, class: 'btn btn-primary' %>
</div>
